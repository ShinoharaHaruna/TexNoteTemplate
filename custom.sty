\ProvidesPackage{custom}

\RequirePackage{fancyhdr}
\RequirePackage{geometry}
\RequirePackage{fontspec}

\geometry{
    a4paper,
    total={170mm,257mm},
    left=20mm,
    top=20mm,
}

% Page layout
\setlength{\headheight}{15pt}

% If you want the settings apply to the first page, use plain style, otherwise comment it.
\fancypagestyle{plain}{
    \fancyhf{}
    \fancyfoot[L]{\thedate}
    \fancyhead[L]{Description of the document}
    \fancyhead[R]{\theauthor}
}

% The settings apply to the rest of the pages.
\fancypagestyle{fancy}{
    \fancyhf{}
    \fancyhead[L]{\leftmark}
    \fancyhead[R]{\theauthor}
    \fancyfoot[L]{\thedate}
    \fancyfoot[R]{\thepage}
}

\pagestyle{fancy}

% For Chinese characters
\setmainfont{SimSun}